<assembly
		xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0">
	<id>full</id>
	<formats>
		<format>war</format>
		<format>tar.gz</format>
	</formats>
    <includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
        <fileSet>
            <directory>./src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.properties</include>
            </includes>
        </fileSet>
		<fileSet>
			<directory>./src/main/resources/spring</directory>
			<outputDirectory>spring</outputDirectory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>./src/main/resources/META-INF</directory>
			<outputDirectory>META-INF</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>./src/main/resources/logs</directory>
			<outputDirectory>logs</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
        <fileSet>
            <directory>./src/main/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>755</fileMode>
            <includes>
                <include>*.*</include>
                <include>*.sh</include>
            </includes>
        </fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib/puma</outputDirectory>
			<scope>runtime</scope>
			<includes>
				<include>com.dianping.puma:puma-core</include>
				<include>com.dianping.puma:puma-common</include>
				<include>com.dianping.puma:puma-alarm</include>
				<include>com.dianping.puma:puma-biz</include>
				<include>com.dianping.puma:puma-extensions-config</include>
                <include>com.dianping.puma:puma-extensions-notify</include>
                <include>com.dianping.puma:puma-alarm-deploy</include>
			</includes>
		</dependencySet>

		<dependencySet>
			<outputDirectory>lib/dianping</outputDirectory>
			<scope>runtime</scope>
			<includes>
				<include>com.dianping.lion:lion-client</include>
				<include>com.dianping.cat:cat-client</include>
                <include>com.dianping.zebra:zebra-api</include>
			</includes>
		</dependencySet>

		<dependencySet>
			<outputDirectory>lib/others</outputDirectory>
			<scope>runtime</scope>
			<excludes>
				<exclude>com.dianping.lion:lion-client</exclude>
				<exclude>com.dianping.cat:cat-client</exclude>
                <exclude>com.dianping.zebra:zebra-api</exclude>
                <exclude>com.dianping.puma:puma-core</exclude>
                <exclude>com.dianping.puma:puma-common</exclude>
                <exclude>com.dianping.puma:puma-alarm</exclude>
                <exclude>com.dianping.puma:puma-biz</exclude>
                <exclude>com.dianping.puma:puma-extensions-config</exclude>
                <exclude>com.dianping.puma:puma-extensions-notify</exclude>
                <exclude>com.dianping.puma:puma-alarm-deploy</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>